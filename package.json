{
  "name": "supporticon",
  "version": "12.3.0",
  "description": "A libary to handle fetching data from JustGiving",
  "main": "index.js",
  "scripts": {
    "start": "styleguidist server",
    "build": "babel source -d dist",
    "test:lint": "prettier 'source/**/*.js' --check",
    "test:lint:fix": "prettier 'source/**/*.js' --write",
    "test:unit": "mocha source/**/**/__tests__/*.js --require @babel/register --require test/common.js",
    "test": "npm run test:lint && npm run test:unit",
    "format": "prettier 'source/**/*.js' --write",
    "precommit": "yarn lint-staged",
    "deploy:prepare": "npm run build && cp -R dist ./npm-supporticon && cp package.json ./npm-supporticon && cp README.md ./npm-supporticon",
    "validate:typescript": "tsc --pretty --noEmit",
    "playground:start": "yarn webpack serve",
    "playground:build": "yarn webpack",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackbaud-services/supporticon.git"
  },
  "bugs": {
    "url": "https://github.com/blackbaud-services/supporticon/issues"
  },
  "author": "Dan Henderson <danhenderson.web@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "7.24.1",
    "@babel/core": "7.24.3",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/register": "^7.15.3",
    "@cfaester/enzyme-adapter-react-18": "^0.7.1",
    "babel-loader": "9.1.3",
    "chai": "^4.3.4",
    "css-loader": "6.10.0",
    "enzyme": "^3.11.0",
    "eslint": "8.57.0",
    "husky": "^9.1.5",
    "jsdom": "^17.0.0",
    "lint-staged": "^15.2.9",
    "lodash": "^4.17.21",
    "mocha": "^9.1.1",
    "moxios": "^0.4.0",
    "prettier": "^2.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sinon": "^11.1.2",
    "source-map-loader": "5.0.0",
    "style-loader": "3.3.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "5.0.4"
  },
  "dependencies": {
    "@bugsnag/js": "^7.21.0",
    "@tanstack/react-query": "^5.28.4",
    "axios": "0.21.4",
    "constructicon": "5.1.5",
    "dayjs": "^1.10.6",
    "js-base64": "3.7.7",
    "prop-types": "^15.7.2",
    "slugify": "^1.6.0",
    "spark-md5": "^3.0.2",
    "url-parse": "1.5.10"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "lint-staged": {
    "source/**/*.js": [
      "npm run test:lint",
      "npm run test:unit"
    ]
  }
}
