#!/usr/bin/env bash

set -euo pipefail

git config --global user.name "BuildKite"
git config --global user.email buildkite@everydayhero.com

mkdir -p /root/.ssh
ssh-keyscan github.com >> ~/.ssh/known_hosts 2>/dev/null

# Publish docs to Github Pages
npm install yarn -g
yarn install --ignore-engines
npm run docs:deploy
